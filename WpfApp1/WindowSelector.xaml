<Window x:Class="WpfApp1.WindowSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Chọn thành viên" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Chọn một thành viên:" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <TextBox x:Name="SearchBox" 
                 Grid.Row="1" 
                 Padding="8" 
                 Margin="0,0,0,10" 
                 TextChanged="SearchBox_TextChanged"
                 Text="" 
                 BorderBrush="Gray"
                 BorderThickness="1"    
                 FontSize="14">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock Text="Tìm kiếm theo tên..." 
                                                      Foreground="Gray" 
                                                      Margin="5,0,0,0"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Border Grid.Row="2" 
                CornerRadius="15" 
                BorderThickness="2" 
                BorderBrush="Gray" 
                Margin="0,0,0,20" 
                Background="Transparent" 
                Padding="10">
            <ListBox x:Name="PeopleListBox" 
                     BorderThickness="0"
                     FontSize="14"
                     Background="Transparent"/>
        </Border>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="SelectButton" 
                    Content="Chọn" 
                    Padding="20,8" 
                    Click="SelectButton_Click" 
                    FontWeight="SemiBold" 
                    FontSize="16"
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Cursor="Hand" 
                    Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" 
                    Content="Hủy" 
                    Padding="20,8" 
                    Click="CancelButton_Click" 
                    FontWeight="SemiBold" 
                    FontSize="16"
                    Background="#757575" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>