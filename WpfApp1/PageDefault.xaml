<Page x:Class="WpfApp1.PageDefault"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Title="PageDefault">
    <Grid Background="#FAFAFA">
        <TextBlock Text="HỆ THỐNG QUẢN LÝ CÂY GIA PHẢ" 
               FontSize="66" 
               FontStyle="Italic"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,100,0,0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="8" 
                            ShadowDepth="2" 
                            Opacity="1" 
                            Color="#1E40AF"/>
            </TextBlock.Effect>
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00DDEB" Offset="0.0"/>
                    <GradientStop Color="#FF3B82F6" Offset="0.4"/>
                    <GradientStop Color="#FF8B5CF6" Offset="0.7"/>
                    <GradientStop Color="#FFEC4899" Offset="1.0"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
            <TextBlock Text="Tìm kiếm người..." 
                       FontSize="20"
                       FontWeight="Bold" 
                       Foreground="#888" 
                       Margin="2,0,0,4" />

            <Grid Height="80" Margin="0,0,0,20">
                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Background="White">
                    <TextBox x:Name="SearchBox"
                             FontSize="20"
                             Padding="10,8,45,8"
                             BorderThickness="0"
                             KeyUp ="SearchBox_KeyDown"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"/>
                </Border>

                <Button Content="🔍"
                        Width="100"
                        Height="80"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"
                        Click="Search_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="36"
                        Cursor="Hand">
                    <Button.ToolTip>
                        <ToolTip Content="Tìm kiếm"/>
                    </Button.ToolTip>
                </Button>
            </Grid>

            <Border BorderBrush="#4fb04f"
                    BorderThickness="1" 
                    CornerRadius="8"
                    Background="#4fb04f">
                <Button Content="Nhập thông tin người mới"
                        FontSize="20"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="80"
                        Click="Create_Person"
                        Cursor="Hand"
                        Background="Transparent"
                        BorderThickness="0"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>