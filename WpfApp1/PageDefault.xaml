<Page x:Class="WpfApp1.PageDefault"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="PageDefault">
    <Grid Background="#FAFAFA">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Tim kiếm người..." FontWeight="Bold" Foreground="#888" Margin="2,0,0,4" />
            <Grid Height="35">
                <Border BorderBrush="Black" 
BorderThickness="1" 
CornerRadius="5"
Width="300"
Height="35"
Background="White">
                    <TextBox x:Name="SearchBox"
         FontSize="16"
         Padding="10,8,45,8"
         BorderBrush="#CCCCCC"
         BorderThickness="1"
         VerticalContentAlignment="Center" Margin="0,0,0,258"/>
                </Border>
                <Button Content="🔍"
        Width="35"
        Height="35"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Margin="0,0,2,0"
        Click="Search_Click"
        Background="Transparent"
        BorderThickness="0"
        FontSize="18"
        Cursor="Hand">
                    <Button.ToolTip>
                        <ToolTip Content="Tìm kiếm"/>
                    </Button.ToolTip>
                </Button>
            </Grid>
            <Border BorderBrush="Black"
                Margin="0,20,0,0"
                BorderThickness="1" 
                CornerRadius="5"
                Width="300"
                Height="40"
                Background="White">
                <Button Content="Nhập thông tin người mới"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                Click="Create_Person"
                Cursor="Hand"
                Background="#4fb04f"/>
            </Border>
        </StackPanel>

    </Grid>
</Page>
