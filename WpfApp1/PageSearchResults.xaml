<Page x:Class="WpfApp1.PageSearchResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageSearchResults">
 
    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="BackButton" 
             Content="←" 
             FontSize="30"
             Click="BackButton_Click"
             Padding="10,5"
             Background="Transparent"
             BorderThickness="0"
             Cursor="Hand"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="1" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
                <StackPanel Width="500" Margin="0,0,0,20">
                    <TextBlock Text="Tìm kiếm người..." 
                           FontWeight="Bold"
                           Foreground="#888" 
                           Margin="2,0,0,4" 
                           FontSize="14"/>
                    <Grid Height="40">
                        <Border BorderBrush="Black" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Width="500"
                    Height="40"
                    Background="White">
                            <TextBox x:Name="SearchBox"
                             FontSize="14"
                             Padding="10,8,45,8"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             KeyUp="SearchBox_KeyDown"
                             VerticalContentAlignment="Center"/>
                        </Border>
                        <Button Content="🔍"
                            Width="35"
                            Height="40"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,2,0"
                            Click="Search_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand">
                            <Button.ToolTip>
                                <ToolTip Content="Tìm kiếm"/>
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                </StackPanel>
                <Border BorderBrush="#CCCCCC" 
                    BorderThickness="2" 
                    CornerRadius="5"
                    Width="500"
                    Height="300"
                    Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SearchResultsPanel" Margin="10">
                            <TextBlock x:Name="NoResultsText"
                                   Text="Nhập tên để tìm kiếm..."
                                   FontWeight="Bold"
                                   Foreground="#999999"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>