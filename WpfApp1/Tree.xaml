<Page x:Class="WpfApp1.Tree"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tree">
    <Page.Resources>
        <!-- Person Card Template -->
        <Style x:Key="PersonCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MaleCardStyle" TargetType="Border" BasedOn="{StaticResource PersonCardStyle}">
            <Setter Property="BorderBrush" Value="#2196F3"/>
        </Style>

        <Style x:Key="FemaleCardStyle" TargetType="Border" BasedOn="{StaticResource PersonCardStyle}">
            <Setter Property="BorderBrush" Value="#E91E63"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Control Panel -->
        <Border Grid.Row="0" Background="#f5f5f5" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BackButton" 
                    Content="←" 
                    FontSize="30"
                    Click="BackButton_Click"
                    Padding="10,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"/>
                </StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<TextBlock x:Name="RootPersonText" Text="Loading..." VerticalAlignment="Center" 
                               FontWeight="SemiBold" FontSize="16" Margin="0,0,20,0"/>
					<Button x:Name="ZoomInButton" Content="+" Margin="10,0,0,0" Padding="15,5" Click="ZoomIn_Click"
                            Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand" FontSize="16" FontWeight="Bold"/>
					<Button x:Name="ZoomOutButton" Content="-" Margin="5,0,0,0" Padding="15,5" Click="ZoomOut_Click"
                            Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand" FontSize="16" FontWeight="Bold"/>
					<Button x:Name="ResetZoomButton" Content="Reset" Margin="5,0,0,0" Padding="15,5" Click="ResetZoom_Click"
                            Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand"/>
					<Button x:Name="CalcBloodDiff" Margin="5,0,0,0" Padding="15,5" Click="CalcDis"
                            Background="#eb5e34" Foreground="White" BorderThickness="0" Cursor="Hand">
						<TextBlock TextAlignment="Center">
                        Bloodline<LineBreak/>Distance
						</TextBlock>
					</Button>
					<TextBlock x:Name="DistanceText" Text="Khoảng cách:" VerticalAlignment="Center" 
                    FontWeight="SemiBold" FontSize="16" Margin="20,0,20,0" Visibility="Collapsed"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button x:Name="Filter" 
                    Content="🔍" 
                    FontSize="20"
                    Click="FilterOption"
                    Padding="10,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"/>
				</StackPanel>
			</Grid>
        </Border>

        <!-- Scrollable Canvas Area -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      x:Name="TreeScrollViewer" Background="#fafafa">
            <Canvas x:Name="TreeCanvas" Background="White">
                <!-- Tree will be drawn here -->
            </Canvas>
        </ScrollViewer>
		<Grid x:Name="SearchPanel" Grid.Row="1" HorizontalAlignment="Right" Background="#f0f0f0" Width="500" Focusable="True" KeyDown="SearchPanel_KeyDown"
      Visibility="Collapsed">

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<StackPanel Grid.Row="0" Margin="0,5">
				<TextBlock Text="Họ và tên" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Center"/>
				<TextBox x:Name="FullName" FontSize="14" Padding="8" BorderBrush="#CCCCCC" BorderThickness="1" MaxWidth="300"/>

				<TextBlock Text="Giới tính" FontWeight="Heavy" FontSize="14" Margin="10,10,0,5" HorizontalAlignment="Center"/>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<RadioButton x:Name="GenderMale" PreviewMouseDown="RadioButton_PreviewMouseDown" 
								 Content="Nam" FontWeight="Bold" GroupName="Gender" Margin="0,0,20,0" VerticalContentAlignment="Center"/>
					<RadioButton x:Name="GenderFemale" PreviewMouseDown="RadioButton_PreviewMouseDown" 
								 Content="Nữ" FontWeight="Bold" GroupName="Gender" VerticalContentAlignment="Center"/>
				</StackPanel>

				<TextBlock Text="Thế hệ" FontWeight="Heavy" FontSize="14" Margin="10,10,0,5" HorizontalAlignment="Center"/>
				<ComboBox x:Name="genBox" Width="100" HorizontalAlignment="Center"/>
			</StackPanel>

			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="{Binding ActualHeight, ElementName=SearchPanel}">
				<StackPanel x:Name="SearchResultsPanel" Margin="10">
					<TextBlock x:Name="NoResultsText"
                       Text="Enter để tìm kiếm..."
                       FontWeight="Bold"
                       Foreground="#999999"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
				</StackPanel>
			</ScrollViewer>
		</Grid>

	</Grid>
</Page>
