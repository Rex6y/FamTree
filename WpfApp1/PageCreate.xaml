<Page x:Class="WpfApp1.PageCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageCreate">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="BackButton" 
                    Content="←" 
                    FontSize="30"
                    Click="BackButton_Click"
                    Padding="10,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,20" MaxWidth="500" HorizontalAlignment="Center">

                <TextBlock Text="Tạo thành viên mới" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Ảnh đại diện" 
                               FontWeight="Bold"
                               FontSize="14" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="PfpBorder"
                            Width="150" 
                            Height="150" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="2"
                            CornerRadius="75"
                            Background="#F5F5F5"
                            MouseLeftButtonDown="Pfp_click"
                            Cursor="Hand">
                        <Border.ToolTip>
                            <ToolTip Content="Click để chọn ảnh"/>
                        </Border.ToolTip>
                        <Grid>
                            <Image x:Name="Pfp" 
                                   Stretch="UniformToFill"
                                   IsHitTestVisible="False">
                                <Image.Clip>
                                    <EllipseGeometry Center="75,75" RadiusX="73" RadiusY="73"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="📷" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="#999999"
                                       x:Name="PlaceholderIcon"/>
                        </Grid>
                    </Border>
                    <TextBlock Text="Click để chọn ảnh" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <TextBlock Text="Họ và tên *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="FullName"
                             FontSize="14" 
                             Padding="8"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <TextBlock Text="Giới tính *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="GenderMale" 
                                     Content="Nam" 
                                     FontWeight="Bold"
                                     GroupName="Gender"
                                     Margin="0,0,20,0"
                                     VerticalContentAlignment="Center"/>
                        <RadioButton x:Name="GenderFemale" 
                                     Content="Nữ" 
                                     FontWeight="Bold"
                                     GroupName="Gender"
                                     VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,10">
                    <TextBlock Text="Ngày sinh *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <DatePicker x:Name="Birthdate" 
                                FontSize="14"
                                Padding="8"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"/>
                </StackPanel>
                <Border BorderBrush="Black"
                Margin="0,30,0,20"
                BorderThickness="1" 
                CornerRadius="5"
                Width="300"
                Height="40"
                Background="White">
                    <Button x:Name="CreatePerson" 
                        Content="Tạo thành viên" 
                        Click="CreatePerson_Click"
                        Padding="15,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#4fb04f"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch">
                    </Button>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>