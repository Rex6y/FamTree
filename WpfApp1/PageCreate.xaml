<Page x:Class="WpfApp1.PageCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="PageCreate">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5,5,0,0">
            <Button x:Name="BackButton"
                    Width="96"
                    Height="40"
                    Click="BackButton_Click"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,10,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Name="borderx"
                        CornerRadius="20"
                        Background="#4fb04f"
                        BorderBrush="#FFFFFFFF"
                        BorderThickness="2">
                                <Grid>
                                    <TextBlock Text="&#x276E;"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="10,-2,0,0"/>
                                    <TextBlock Text="Back"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="30,0,20,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borderx" Property="Background" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,10,0,0" MaxWidth="500" HorizontalAlignment="Center">

                <TextBlock Text="Tạo thành viên mới" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Ảnh đại diện" 
                               FontWeight="Bold"
                               FontSize="14" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="PfpBorder"
                            Width="150" 
                            Height="150" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="2"
                            CornerRadius="75"
                            Background="#F5F5F5"
                            MouseLeftButtonDown="Pfp_click"
                            Cursor="Hand">
                        <Border.ToolTip>
                            <ToolTip Content="Click để chọn ảnh"/>
                        </Border.ToolTip>
                        <Grid>
                            <Image x:Name="Pfp" 
                                   Stretch="UniformToFill"
                                   IsHitTestVisible="False">
                                <Image.Clip>
                                    <EllipseGeometry Center="75,75" RadiusX="73" RadiusY="73"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="📷" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="#999999"
                                       x:Name="PlaceholderIcon"/>
                        </Grid>
                    </Border>
                    <TextBlock Text="Click để chọn ảnh" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <TextBlock Text="Họ và tên *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black"
                            BorderThickness="1" 
                            CornerRadius="8"
                            Width="350"
                            Height="45"
                            Background="White">
                        <TextBox x:Name="FullName"
                                 FontSize="14" 
                                 Padding="8"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <TextBlock Text="Giới tính *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="GenderMale" 
                                     Content="Nam" 
                                     FontWeight="Bold"
                                     GroupName="Gender"
                                     Margin="0,0,20,0"
                                     VerticalContentAlignment="Center"/>
                        <RadioButton x:Name="GenderFemale" 
                                     Content="Nữ" 
                                     FontWeight="Bold"
                                     GroupName="Gender"
                                     VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <TextBlock Text="Ngày sinh *" FontWeight="Heavy" FontSize="14" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black"
                            BorderThickness="1" 
                            CornerRadius="8"
                            Width="350"
                            Height="45"
                            Background="White">
                        <DatePicker x:Name="Birthdate" 
                                    FontSize="14"
                                    Padding="8"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    SelectedDateFormat="Short"
                                    Language="vi-VN"/>
                    </Border>
                </StackPanel>

                <Border BorderBrush="Black"
                        Margin="0,20,0,20"
                        BorderThickness="1" 
                        CornerRadius="5"
                        Width="350"
                        Height="45"
                        Background="White">
                    <Button x:Name="CreatePerson" 
                            Content="Tạo thành viên" 
                            Click="CreatePerson_Click"
                            Padding="15,10"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#4fb04f"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                    </Button>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Border Background="#F9F9F9"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
                <StackPanel>
                    <TextBlock Text="Danh sách thành viên" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="10,15,10,15"
                       Foreground="#333333"
                       HorizontalAlignment="Center"/>

                    <Border Height="1" 
                    Background="#DDDDDD" 
                    Margin="10,0,10,10"/>

                    <StackPanel x:Name ="SearchResultsPanel" Margin="10">
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>