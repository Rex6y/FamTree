<Page x:Class="WpfApp1.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BackButton" Content="← Back" Padding="10,5" Click="BackButton_Click"
                        Background="#757575" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,20,0"/>
                <TextBlock x:Name="PageTitle" Text="Person Profile" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" MaxWidth="800">

                <!-- Profile Picture Section -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Profile Picture" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="ProfilePicBorder" Grid.Column="0" Width="120" Height="120" CornerRadius="60"
                                    Background="#2196F3" Margin="0,0,20,0">
                                <TextBlock x:Name="ProfileInitial" Text="?" FontSize="48" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <Button x:Name="ChangePictureButton" Content="Change Picture" Padding="15,8" 
                                        Click="ChangePicture_Click" Background="#4CAF50" Foreground="White" 
                                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>
                                <Button x:Name="RemovePictureButton" Content="Remove Picture" Padding="15,8" 
                                        Click="RemovePicture_Click" Background="#F44336" Foreground="White" 
                                        BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Basic Info Section -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Basic Information" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="NameText" Text="" FontSize="14" Margin="0,0,0,15"/>

                        <TextBlock Text="Gender:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="GenderText" Text="" FontSize="14" Margin="0,0,0,15"/>

                        <TextBlock Text="Birth Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BirthDateText" Text="" FontSize="14" Margin="0,0,0,15"/>

                        <TextBlock Text="Generation:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="GenerationText" Text="" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Family Relationships Section -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Family Relationships" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <!-- Father -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Father:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="DadText" Grid.Column="1" Text="Not set" FontSize="14" VerticalAlignment="Center"/>
                            <Button x:Name="SetDadButton" Grid.Column="2" Content="Set Father" Padding="10,5" 
                                    Click="SetDad_Click" Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <!-- Mother -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Mother:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="MomText" Grid.Column="1" Text="Not set" FontSize="14" VerticalAlignment="Center"/>
                            <Button x:Name="SetMomButton" Grid.Column="2" Content="Set Mother" Padding="10,5" 
                                    Click="SetMom_Click" Background="#E91E63" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <!-- Spouse -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Spouse:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="SpouseText" Grid.Column="1" Text="Not set" FontSize="14" VerticalAlignment="Center"/>
                            <Button x:Name="SetSpouseButton" Grid.Column="2" Content="Set Spouse" Padding="10,5" 
                                    Click="SetSpouse_Click" Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <!-- Children -->
                        <TextBlock Text="Children:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <ListBox x:Name="ChildrenListBox" MinHeight="80" MaxHeight="150" Margin="0,0,0,10"/>
                        <Button x:Name="AddChildButton" Content="+ Add Child" Padding="10,5" 
                                Click="AddChild_Click" Background="#4CAF50" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Actions Section -->
                <Border Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <Button x:Name="ViewTreeButton" Content="View Family Tree" Padding="15,8" 
                                Click="ViewTree_Click" Background="#673AB7" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>
                        <Button x:Name="DeletePersonButton" Content="Delete Person" Padding="15,8" 
                                Click="DeletePerson_Click" Background="#F44336" Foreground="White" 
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
